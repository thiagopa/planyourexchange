<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result_country_state_city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:" />

    <TextView
        android:id="@+id/result_country_state_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/result_country_state_city_text"/>

    <TextView
        android:id="@+id/result_visa_fee_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visa_fee"
        android:layout_below="@id/result_country_state_city_text"/>

    <TextView
        android:id="@+id/result_visa_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/result_country_state_city_text"
        android:layout_toRightOf="@id/result_visa_fee_text"/>

    <TextView
        android:id="@+id/result_cost_of_living_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost_of_living"
        android:layout_below="@id/result_visa_fee_text"/>

    <TextView
        android:id="@+id/result_cost_of_living"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/result_visa_fee_text"
        android:layout_toRightOf="@id/result_cost_of_living_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_course_school"
        android:text="Course @ School"
        android:layout_below="@id/result_cost_of_living_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_cost_for_weeks"
        android:layout_gravity="center_horizontal"
        android:text="Cost for n Weeks"

        android:layout_below="@id/result_course_school"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_health_insurance"
        android:layout_gravity="center_horizontal"
        android:text="Health Insurance"
         
        android:layout_below="@id/result_cost_for_weeks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_airfare"
        android:layout_gravity="center_horizontal"
        android:text="AirFare"
         
        android:layout_below="@id/result_health_insurance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_total_cost"
        android:layout_gravity="center_horizontal"
        android:text="Total"

        android:layout_below="@id/result_airfare"/>

    <Button
        android:id="@+id/result_cost_of_living_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/result_total_cost"

        android:text="@string/cost_of_living_details"/>

    <Button
        android:id="@+id/result_school_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/result_cost_of_living_details"

        android:text="@string/school_details"/>


</RelativeLayout>