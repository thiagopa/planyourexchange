<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_country_state_city"
        android:layout_gravity="center_horizontal"
        android:text="Country / State / City"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_course_school"
        android:layout_gravity="center_horizontal"
        android:text="Course @ School"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_cost_for_weeks"
        android:layout_gravity="center_horizontal"
        android:text="Cost for n Weeks"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_health_insurance"
        android:layout_gravity="center_horizontal"
        android:text="Health Insurance"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_airfare"
        android:layout_gravity="center_horizontal"
        android:text="AirFare"
        android:textSize="20dp" />
</LinearLayout>