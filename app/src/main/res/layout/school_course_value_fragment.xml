<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/school_course_value_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/school_course_value_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_course_value_header" />
    <TextView
        android:id="@+id/school_course_value_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/school_course_value"
        android:textStyle="bold"/>
</RelativeLayout>
